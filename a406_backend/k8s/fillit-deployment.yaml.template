apiVersion: apps/v1
kind: Deployment
metadata:
  name: fillit-deployment
spec:
  replicas: 1
  strategy:
    type: Recreate # Recreate 전략은 새로운 Pod를 생성하기 전에 기존 Pod를 모두 종료
  selector:
    matchLabels:
      app: fillit
  template:
    metadata:
      labels:
        app: fillit
    spec:
      containers:
      - name: fillit-container
        image: jaegyeong223/fillit:${BUILD_NUMBER}
        imagePullPolicy: Always
        ports:
          - containerPort: 8080
            hostPort: 8090